<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/textViewStyle</item>
    </style>

    <style name="buttonStyle" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/buttonbackground</item>
    </style>

    <style name="editTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="blackActivity">
        <item name="android:background">@drawable/diagmonds</item>
    </style>

    <style name="listViewStyle" parent="android:style/Widget.ListView">
        <item name="android:background">@drawable/lv_bg</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textViewStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="subleTextStyle" parent="android:style/Widget.TextView">
        <item name="android:textColor">@color/subtleText</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
