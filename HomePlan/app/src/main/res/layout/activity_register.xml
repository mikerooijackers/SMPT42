<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.teamhomeplan.homeplan.RegisterActivity"
    android:background="@drawable/diagmonds">

    <include android:id="@+id/registerLoader" layout="@layout/loader"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/register_imgView_Avatar"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Kies profielfoto"
            android:id="@+id/register_btnChooseAvatar"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text"
            android:background="@color/buttonbackground" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/lblName"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:textColor="@color/text" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtName"
        android:layout_below="@+id/lblName"
        android:layout_alignParentStart="true"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/lblEmail"
        android:layout_below="@+id/txtName"
        android:layout_alignParentStart="true"
        android:textColor="@color/text" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:layout_below="@+id/lblEmail"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtName"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Password"
        android:id="@+id/textView4"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentStart="true"
        android:textColor="@color/text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/txtEmail"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lblError"
        android:layout_above="@+id/btnRegister"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Registeren"
        android:id="@+id/btnRegister"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/buttonbackground"
        android:textColor="@color/text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Confirm password"
        android:id="@+id/textView5"
        android:layout_below="@+id/txtPassword"
        android:layout_alignParentStart="true"
        android:textColor="@color/text" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtRegisterPasswordConfirm"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:textColor="@color/text" />

</RelativeLayout>
