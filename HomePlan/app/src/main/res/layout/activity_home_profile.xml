<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.teamhomeplan.homeplan.HomeProfileActivity"
    android:background="@drawable/diagmonds">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout3">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_user_activity"
        android:id="@+id/homeprofile_btnViewActivities"
        style="@style/buttonStyle" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            style="@style/buttonStyle"
            android:text="Genereer een planning"
            android:id="@+id/homeprofile_generatePlanning"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/adjust_day_length"
            style="@style/buttonStyle"
            android:id="@+id/btnEditDayLength" />

    </LinearLayout>

</RelativeLayout>
