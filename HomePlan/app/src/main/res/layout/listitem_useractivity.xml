<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listitem_useractivity_icon"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StupidPlaceHolderJeweetZelluf" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/subleTextStyle"
                android:id="@+id/listitem_useractivity_duration"
                android:text="10:00/20:00"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>